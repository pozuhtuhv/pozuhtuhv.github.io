---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "description" : "{{ post.description | escape }}",
      "categories" : "{{ post.categories }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.url }}{{ post.url }}",
      "date"     : "{{ post.date | date: "%Y-%m-%d" }}",
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
